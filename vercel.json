{
  "version": 2,
    "rewrites": [
    {
      "source": "/slides/([^/]+)/(.*)",
      "destination": "/slides/$1/index.html"
    }
  ],
  "builds": [
     {
      "src": "index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "./public" }
    },
    {
      "src": "!index.html",
      "use": "@vercel/static",
      "config": { "source": ".", "output": "./public/slides" }
    }
  ]
}

